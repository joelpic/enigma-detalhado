//------------------------------------------------------------------------------
// funcoes secundarias
//por enquanto nao tem ainda


void InitTimer0()
{
  OPTION_REG      = 0x83;
  TMR0            = 6;
  INTCON          = 0xA0;
}

void Interrupt()
{
  if (TMR0IF_bit)
  {
       display7_4511(segundos);
    TMR0IF_bit    = 0;
    TMR0          = 6;
  }
}
//------------------------------------------------------------------------------


void main()
{

bit oldstate, oldstate1;
int i=500;





   display7_4511_Init();
 InitTimer0();
 trisb=0x00;
 portb=0x00;

 TRISA=0X00;
 PORTA=0X00;

 trisc=0x00;
 portc=0x00;

 ANSEL=0;
 ANSELH=0;
 



// I2C*********************************

 I2C1_Init(100000);//inicia I2C com frequencia em 1000k

//**********ESCRITA I2C*********************************************
  I2C1_Start();
 I2C1_Wr(11010000);
 I2C1_Wr(0x02); //ESCRITA HORA
 I2C1_Wr(Dec2Bcd(23));
 I2C1_Stop();

   I2C1_Start();
 I2C1_Wr(11010000);
 I2C1_Wr(0x01); //ESCRITA MINUTOS
 I2C1_Wr(Dec2Bcd(29));
 I2C1_Stop();



 while(1)
 {  

 //********leitura horas**********************************
 I2C1_Start();
 I2C1_Wr(11010000);
 I2C1_Wr(0x02);
 I2C1_Repeated_Start();
 I2C1_Wr(11010001);
 horas= Bcd2Dec (I2C1_Rd(0));
 I2C1_Stop();
//*********leitura minutos********************************
 I2C1_Start();
 I2C1_Wr(11010000);
 I2C1_Wr(0x01);
 I2C1_Repeated_Start();
 I2C1_Wr(11010001);
 minutos= Bcd2Dec (I2C1_Rd(0));
 I2C1_Stop();
//*********leitura segundos********************************
 I2C1_Start();
 I2C1_Wr(11010000);
 I2C1_Wr(0x00);
 I2C1_Repeated_Start();
 I2C1_Wr(11010001);
 segundos= Bcd2Dec (I2C1_Rd(0));
 I2C1_Stop();
//*********************************************************

delay_ms(10);

 }

}












