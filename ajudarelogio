//                         Descrição das funções
//------------------------------------------------------------------------------
/*

********************************************************************************
display7_4511_Init()
Função para Inicialização dos displays de 7 segmentos obrigatoria

********************************************************************************
display7_4511_Out(unsigned char _num_display7_4511)
Função para converter um número decima em BCD para 4511 em um unico display
de 7 segmentos precisar da função display7_4511_Init()

********************************************************************************
display7_4511(unsigned int _num_display7_4511_4digito)
Função para escreve um número em 4 display com C.I 4511 precisar da função
display7_4511_Init()

********************************************************************************
*/
//------------------------------------------------------------------------------
void display7_4511_Init()
{
  display7_4511_A_Direction = 0;
  display7_4511_B_Direction = 0;
  display7_4511_C_Direction = 0;
  display7_4511_D_Direction = 0;
  display7_4511_E_Direction = 0;
  display7_4511_F_Direction = 0;
  display7_4511_G_Direction = 0;

 // display7_4511_traco_Direction = 0;//traco


  display7_4511_dip1_Direction = 0;
  display7_4511_dip2_Direction = 0;
  display7_4511_dip3_Direction = 0;
  display7_4511_dip4_Direction = 0;
  display7_4511_dip5_Direction = 0;
  //display7_4511_dip6_Direction = 0;//traco

  display7_A = 1;
  display7_4511_B = 1;
  display7_4511_C = 1;
  display7_4511_D = 1;
  display7_4511_E = 1;
  display7_4511_F = 1;
  display7_4511_G = 1;
 // display7_4511_traco = 1;//traço
  //display7_4511_dp = 1;

  display7_4511_dip1 = 0;
  display7_4511_dip2 = 0;
  display7_4511_dip3 = 0;
  display7_4511_dip4 = 0;
  display7_4511_dip5 = 0;
 // display7_4511_dip6 = 0;//traço

}//Final display7_4511_Init

//------------------------------------------------------------------------------
void display7_4511_Out(unsigned char _num_display7_4511)
{
 switch (_num_display7_4511)
 {
    case 0:
         display7_A = 1;
         display7_4511_B = 1;
         display7_4511_C = 1;
         display7_4511_D = 1;
         display7_4511_E = 1;
         display7_4511_F = 1;
         display7_4511_G = 0;
  break;
  case 1:
         display7_A = 0;
         display7_4511_B = 1;
         display7_4511_C = 1;
         display7_4511_D = 0;
         display7_4511_E = 0;
         display7_4511_F = 0;
         display7_4511_G = 0;
  break;
  case 2:
         display7_A = 1;
         display7_4511_B = 1;
         display7_4511_C = 0;
         display7_4511_D = 1;
         display7_4511_E = 1;
         display7_4511_F = 0;
         display7_4511_G = 1;
  break;
  case 3:
         display7_A = 1;
         display7_4511_B = 1;
         display7_4511_C = 1;
         display7_4511_D = 1;
         display7_4511_E = 0;
         display7_4511_F = 0;
         display7_4511_G = 1;
  break;
  case 4:
         display7_A = 0;
         display7_4511_B = 1;
         display7_4511_C = 1;
         display7_4511_D = 0;
         display7_4511_E = 0;
         display7_4511_F = 1;
         display7_4511_G = 1;
  break;
  case 5:
         display7_A = 1;
         display7_4511_B = 0;
         display7_4511_C = 1;
         display7_4511_D = 1;
         display7_4511_E = 0;
         display7_4511_F = 1;
         display7_4511_G = 1;
  break;
  case 6:
         display7_A = 0;
         display7_4511_B = 0;
         display7_4511_C = 1;
         display7_4511_D = 1;
         display7_4511_E = 1;
         display7_4511_F = 1;
         display7_4511_G = 1;
  break;
  case 7:
         display7_A = 1;
         display7_4511_B = 1;
         display7_4511_C = 1;
         display7_4511_D = 0;
         display7_4511_E = 0;
         display7_4511_F = 0;
         display7_4511_G = 0;
  break;
  case 8:
         display7_A = 1;
         display7_4511_B = 1;
         display7_4511_C = 1;
         display7_4511_D = 1;
         display7_4511_E = 1;
         display7_4511_F = 1;
         display7_4511_G = 1;
  break;
  case 9:
         display7_A = 1;
         display7_4511_B = 1;
         display7_4511_C = 1;
         display7_4511_D = 0;
         display7_4511_E = 0;
         display7_4511_F = 1;
         display7_4511_G = 1;
  break;
 }//final switch
}//final display7_4511_Num

//------------------------------------------------------------------------------
void display7_4511(unsigned long _num_display7_4511_5digito)
{

   static unsigned char _pos_display7_4511 = 1;


   if (_num_display7_4511_5digito > 99999) _num_display7_4511_5digito = 99999;

   display7_4511_dip1 = 0;
   display7_4511_dip2 = 0;
   display7_4511_dip3 = 0;
   display7_4511_dip4 = 0;
   display7_4511_dip5 = 0;

   delay_us(10);

   switch(_pos_display7_4511)
   {
    case 1:
               display7_4511_Out((_num_display7_4511_5digito/10000)); //Escreve o n° no display
               display7_4511_dip1 = 1;             //Liga o display 1
               _pos_display7_4511 = 2;             //Habilitar display 2
    break;

    case 2:
               display7_4511_Out(((_num_display7_4511_5digito/1000)%10)); //Escreve o n° no display
               display7_4511_dip2 = 1;             //Liga o display 2
               _pos_display7_4511 = 3;            //Habilitar display 3
    break;

    case 3:
               display7_4511_Out(((_num_display7_4511_5digito/100)%10)); //Escreve o n° no display
               display7_4511_dip3 = 1;             //Liga o display 3
               _pos_display7_4511 = 4;            //Habilitar display 4
    break;

    case 4:
               display7_4511_Out(((_num_display7_4511_5digito/10)%10)); //Escreve o n° no display
               display7_4511_dip4 = 1;             //Liga o display 4
               _pos_display7_4511 = 5;            //Habilitar display 5
    break;

    case 5:
                display7_4511_Out((_num_display7_4511_5digito%10)); //Escreve o n° no display
               display7_4511_dip5 = 1;             //Liga o display 5
               _pos_display7_4511 = 1;            //Habilitar display 1
    break;



   }//Final do switch
}//Final do display7_4511
